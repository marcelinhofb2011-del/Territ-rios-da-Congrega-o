rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /maps/{allPaths=**} {
      // Qualquer usuário autenticado pode ver os mapas (PDFs/Imagens)
      allow read: if request.auth != null;
      
      // Apenas administradores podem fazer upload ou deletar arquivos.
      // Verificamos a role do usuário diretamente no Firestore a partir das regras do Storage
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}