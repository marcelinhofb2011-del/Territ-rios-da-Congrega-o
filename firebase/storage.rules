rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /maps/{allPaths=**} {
      // Qualquer usu√°rio autenticado pode baixar os mapas (PDFs)
      allow read: if request.auth != null;
      
      // Apenas admins podem fazer upload ou deletar. 
      // Validamos o role consultando o Firestore.
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
        (request.resource == null || request.resource.contentType == 'application/pdf');
    }
  }
}