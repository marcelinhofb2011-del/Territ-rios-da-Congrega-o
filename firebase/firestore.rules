rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função auxiliar para verificar autenticação
    function isSignedIn() {
      return request.auth != null;
    }

    // Função para verificar se o usuário logado tem role 'admin'
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Permite que qualquer usuário autenticado veja seu próprio documento ou que admins vejam todos
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      // Permite listagem para o sistema verificar se o banco está vazio no cadastro
      allow list: if isSignedIn();
      // Permite criação do próprio perfil
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Permite atualização (admins mudam tudo, users mudam apenas dados não-sensíveis como nome)
      allow update: if isSignedIn() && (isAdmin() || (request.auth.uid == userId && request.resource.data.role == resource.data.role));
    }

    match /territories/{territoryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /requests/{requestId} {
      // O usuário pode ver suas próprias solicitações ou admin ver todas
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /notifications/{notificationId} {
      // Permite ler se for o dono da notificação ou admin
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      // Usuário pode marcar suas próprias notificações como lidas
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Apenas o sistema (via Admin logic) cria notificações
      allow create: if isSignedIn(); 
    }
  }
}