
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função auxiliar para verificar se está logado
    function isSignedIn() {
      return request.auth != null;
    }

    // Função para verificar se o usuário é admin (buscando no doc de usuários)
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Regras para Usuários
    match /users/{userId} {
      allow read: if isSignedIn(); 
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (isAdmin() || request.auth.uid == userId);
      allow delete: if isAdmin();
    }

    // Regras para Territórios
    match /territories/{territoryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Regras para Solicitações
    match /requests/{requestId} {
      // Admins podem ler e escrever tudo. Usuários podem criar e ler as suas próprias.
      allow read: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    // Regras para Notificações
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }
  }
}
